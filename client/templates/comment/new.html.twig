{% extends 'base.html.twig' %}

{% block title %}Dodaj nowy komentarz{% endblock %}

{% block body %}
    <h3><a href="{{ path('comment_index') }}">Wróć</a></h3>
    <h2>Dodaj nowy komentarz</h2>
    {{ form_start(form) }}
    <div>
        <label>Nick</label>
        {{ form_widget(form.nick) }}
        {{ form_errors(form.nick) }}
    </div><br />
    <div>
        <label>Email</label>
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div><br />
    <div>
        <label>Treść</label>
        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows' : '5'}}) }}
        {{ form_errors(form.message) }}
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    {{ form_end(form) }}

{% endblock %}
